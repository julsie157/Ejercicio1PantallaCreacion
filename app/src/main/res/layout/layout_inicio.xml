<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Inicio"
    android:background="@drawable/fondorojo">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarenemigo"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#A8160C"
        app:titleTextColor="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="              Creacion de Personaje" />

    <ImageView
        android:id="@+id/Imagen"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:src="@drawable/gnomopocho" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerRaza"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="51dp" />

        <Spinner
            android:id="@+id/spinnerClase"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="50dp"
            android:background="@color/white" />

    </LinearLayout>

    <EditText
        android:id="@+id/Nombre"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white"
        android:paddingLeft="110dp"
        android:hint="Nombre del personaje" />


    <Spinner
        android:id="@+id/spinnerEstadoVital"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="170dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/Continuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar" />
    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="0" />

</LinearLayout>