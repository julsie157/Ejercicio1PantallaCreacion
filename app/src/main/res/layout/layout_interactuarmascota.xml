<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondomascota2">

    <TextView
        android:id="@+id/textViewNombreInteractuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imagenMascotaInterac"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/mascota" />

    <TextView
        android:id="@+id/textoContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Contador"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/BotonesInteractuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/botonSalirdeInteractuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir" />

        <Button
            android:id="@+id/botonJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugar" />

        <Button
            android:id="@+id/botonDarComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dar Comida" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewCantidadComidas"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textViewMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel de Felicidad :" />

    <ProgressBar
        android:id="@+id/progressBarFelicidad"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="30"
        android:layout_marginTop="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>

