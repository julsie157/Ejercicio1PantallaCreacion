<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarmercader"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:title="Mercader" />

        <ImageView
            android:id="@+id/Mercader"
            android:layout_width="wrap_content"
            android:layout_height="426dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/mercader" />

        <LinearLayout
            android:id="@+id/botoneraInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Botoncomerciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comerciar" />

            <Button
                android:id="@+id/Botoncontmercader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuar" />
        </LinearLayout>

        <!-- Modificado para incluir ScrollView y LinearLayout para artículos -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/scrollViewArticulos">

            <LinearLayout
                android:id="@+id/panelArticulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Aquí se agregarán dinámicamente los artículos -->
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/panelComercio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:visibility="gone">


            <Button
                android:id="@+id/botonComprar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar" />

            <Button
                android:id="@+id/botonVender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vender" />

            <Button
                android:id="@+id/botonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
