<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Contenedor para las cuatro fotos superiores -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/bosque" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ciudad" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/playa" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/montania" />
    </LinearLayout>

    <!-- Foto del dado -->
    <ImageView
        android:id="@+id/dice_image"
        android:layout_width="269dp"
        android:layout_height="219dp"
        android:layout_gravity="center"
        android:src="@drawable/dado" />

    <!-- Botón -->
    <Button
        android:id="@+id/Botontirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tirar Dado"
        android:layout_gravity="center" />

    <!-- Texto de información -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comienza la aventura, pulsa el DADO para avanzar. CUIDADO puedes encontrarte enemigos"
        android:textAlignment="center"  />

</LinearLayout>
